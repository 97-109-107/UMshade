{
  "version": "0.9",
  "name": "Umshade",
  "manifest_version": 1,
      "launch": {
      "web_url": "http://umshade.it/help.html"
    },
  "browser_action": {
   "popup": "popup.html" 
  },
  "background": {
  "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "http://*/*" 
  ],
  "content_scripts": [
     {
      "matches": ["http://*/*"],
      "js": ["jquery-1.8.2.min.js","localstorage.js","json2.js", "sjcl.js","test.js", "content_script.js"]
    }
  ]  
}