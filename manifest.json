{
  "name": "Umshade",
  "version": "1.2",
  "manifest_version":2,


  "icons": { 
    "48": "img/iconA.png",
    "16": "img/iconA.png"
    },

  "browser_action": {
   "default_icon": "img/icon48.png",            
   "popup": "popup.html" 
  },
  "background": {
  "scripts": ["js/background.js"]
  },
  "web_accessible_resources": [
    "img/help.png",
    "img/icon48.png",
    "img/iconA.png",
    "img/iconB.png",
    "js/background.js",
    "js/content_script.js",
    "js/jquery-1.8.2.min.js",
    "js/json2.js",
    "js/localstorage.js",
    "js/sjcl.js",
    "js/umshade.js",
    "font/Cabin-Regular.ttf",
    "font/vuca.otf",
    "font/vuca-webfont.eot",
    "font/vuca-webfont.svg",
    "font/vuca-webfont.ttf",
    "font/vuca-webfont.woff"
  ],
  "permissions": [
    "tabs", "http://*/*" 
  ],
  "content_scripts": [
     {
      "matches": ["http://*/*"],
      "js": ["js/jquery-1.8.2.min.js","js/localstorage.js","js/json2.js", "js/sjcl.js", "js/content_script.js"]
    }
  ]  
}